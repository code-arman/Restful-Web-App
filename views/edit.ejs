<% include ./partials/header %>
<div class = "ui main text container segment">
	<div class = "ui huge header">
		Edit <%= blog.title %>
	</div>
	<form class = "ui form" action = "/blogs/<%= blog._id%>?_method=PUT" method = "POST" >
		<div class = "field">
			<lablel>Title</lablel>
					<input type = "text" name = "blog[title]" placeholder = "title" value = "<%= blog.title %>"required >
		</div>
		<div class = "field">
			<lablel>Image</lablel>
			<input type = "text" name = "blog[image]" placeholder = "image" value = "<%= blog.image %>" required >
		</div>
		<div class = "field">
			<lablel>Blog Post</lablel>
			<textarea  name = "blog[body]" required ><%= blog.body %></textarea>

		</div>
		<input class = "ui green basic button" type = "submit">
		
	</form>
</div>

<% include ./partials/footer %>
